<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackExpense" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#C8E6C9</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorSecondary">#C8E6C9</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorSurface">#E8F5E9</item>
        <item name="colorError">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">#C8E6C9</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorSecondaryContainer">#A5D6A7</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="Theme.TrackExpense" parent="Base.Theme.TrackExpense" />

    <style name="Theme.TrackExpense.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TrackExpense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrackExpense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

</resources>